{% extends "_template.njk" %}
{% block title %}Select Your Rower{% endblock %}
{% block bodyClasses %}water-bg{% endblock %}
{% block content %}
  <div id="intro" class="d-block">
    <h1 class="animate__animated animate__bounceInDown">Welcome To Home Rower!</h1>
    <h2 class="animate__animated animate__bounceInDown animate__delay-1s">Select Your Rower</h2>
  </div>

  <div id="main" class="container-fluid d-none">
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-2 p-1">
      {% for rower in rowers %}
        {{ macros.card(rower)}}
      {% endfor %}
      <div class="col position-relative order-last">
        <div class="card bg-transparent h-100 hover">
          <a href="/register" class="btn btn-info fs-2 text-white top-0 start-0 end-0 position-relative mb-2">
            <i class="bi bi-person-plus align-middle fs-1 me-2"></i> Add New Rower
          </a>
          <a href="/realtime" class="btn btn-secondary fs-2 text-white bottom-0 start-0 end-0 position-relative">
            <i class="bi bi-graph-up align-middle fs-1 me-2"></i> Just The Charts
          </a>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
