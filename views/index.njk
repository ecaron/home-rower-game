{% extends "template.njk" %}
{% block title %}Choose your competitor.{% endblock %}
{% block content %}
    <div class="no-container">
      <h1>Choose your competitor.</h1>
      <div class="row">
        {% for rower in rowers %}
          <div class="rower-cards left">
            <form method="post" action="/compete">
                <input type="hidden" name="competitor" value="{{ rower._id }}">
                <div class="card-panel green lighten-4 center-align hoverable" style="cursor:pointer" onclick="$(this).closest('form').submit()">
                  <div class="avatar" data-details="{{ rower.avatar | dump }}"></div>
                  {% if rower.record %}
                    <div class="section">
                      <button type="submit" class="teal white-text btn-large" style="display:block;margin:0 auto;font-size:150%">{{ rower.name }}</button>
                      {% if rower.logbook %}
                        <button type="button" class="light-green darken-2 black-text btn-large info-rower" data-rower="{{ rower._id }}" style="margin-top:10px">Records</button>
                      {% endif %}
                    </div>
                  {% else %}
                    <b style="font-size:150%" class="white-text">{{ rower.name }}</b><br>
                    <em>Not Yet Rowed</em>
                  {% endif %}
                </div>
            </form>
          </div>
        {% endfor %}
        <div class="rower-cards left">
          <div class="card-panel grey valign-wrapper hoverable" id="logout" style="cursor:pointer">
            <button type="button" class="btn-large red lighten-2" style="font-size:150%;margin:0 auto">Logout</button>
          </div>
        </div>
      </div>
    </div>
{% endblock %}
