{% extends "template.njk" %}

{% block header %}
  <script src="/chart/Chart.bundle.min.js"></script>
{% endblock %}

{% block content %}
  {{ rower }} vs {{ competitor }}
  <div id="water" style="position:absolute;border:1px solid black;top:0;bottom:0;left:0;right:50%;background-image:url('/images/water2.gif')"></div>
  <div id="toggles"></div>
  <div id="graphs"></div>
  <a id="reset" href="/reset">Reset</a>
  <script>
  var pos = 0;
  setInterval(function(){
    $('#water').css('background-position','0 '+pos+'px')
    pos += 10
  }, 200)
  </script>
{% endblock %}