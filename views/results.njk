{% extends "template.njk" %}
{% block content %}
  <div class="container">
    <div class="row">
      <div class="col s12">
        <h1>Race Results!</h1>
        <h2>Winner: {{ winner }}</h2>
      </div>
      <div class="col s6">
        <blockquote>
          <h3><u>Your Time</u><br>
            Max Speed: <strong> {{rower.maxSpeed}} knots</strong><br>
            Distance: <strong> {{rower.distance}}m</strong><br>
            Duration: <strong class="prettyTime">{{rower.duration}}</strong>
          </h3>
          {% if personalBest %}
            <h3><u>A New Personal Best!</u><br>
              Prev. Speed: <strong> {{personalBest.prevMaxSpeed}} knots</strong><br>
              Prev. Distance: <strong> {{personalBest.prevDistance}}m</strong><br>
              Prev. Duration: <strong class="prettyTime">{{personalBest.prevDuration}}</strong>
            </h3>
          {% endif %}
        </blockquote>
      </div>
      <div class="col s6">
        <blockquote>
          <h3><u>Their Time</u><br>
            Max Speed: <strong> {{competitor.maxSpeed}} knots</strong><br>
            Distance: <strong> {{competitor.distance}}m</strong><br>
            Duration: <strong class="prettyTime">{{competitor.duration}}</strong>
          </h3>
        </blockquote>
      </div>
      <div class="col s12">
        <h2><a href="/">Race Again?</a></h2>
      </div>
    </div>
  </div>
{% endblock %}
