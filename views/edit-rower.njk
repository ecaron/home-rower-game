{% extends "_template.njk" %}
{% block content %}
  <div class="container">
    <form id="form" method="post">
      <div class="row">
        <div class="col-4">
          <div class="fixed-top col-4 m-3">
            <h1>{% if rower %}Update{% else %}Create{% endif %} rower.</h1>
            <div id="avatar" {% if rower %}data-details="{{ rower.avatar | dump }}"{% endif %}></div>
            {% if rower %}<input name="id" type="hidden" value="{{rower.id}}">{% endif %}
            <div class="input-field mb-3">
              <label for="name" class="form-label">Rower Name</label>
              <input placeholder="Hank" name="name" id="name" type="text" class="validate form-control" required="required" value="{% if rower %}{{rower.name}}{% endif %}">
            </div>
            <div class="position-relative">
              <button type="submit" id="generate" class="btn btn-primary">Save</button>
              <button type="button" id="generate" class="btn btn-secondary position-absolute end-0" onclick="window.location='/'">Cancel</button>
            </div>
          </div>
        </div>
        <div class="col-8" style="overflow:auto;max-height:100%">
          <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3" id="formInputs"></div>
        </div>
      </div>
    </form>
  </div>
{% endblock %}
{% block footer %}
<script src="/register.js"></script>
{% endblock %}