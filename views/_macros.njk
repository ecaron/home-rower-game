{% macro card(rower, mode='login') %}
  <div class="col rower-box hover {% if mode != 'login' %}disabled{% endif %}" style="order:1" data-records="{{ rower.Records | dump }}" data-id="{{ rower.id }}" id="rower-box-{{ rower.id }}">
    <div class="card border-primary h-100" {% if mode == 'login' %}onclick="$(this).find('form').submit()"{% endif %}>
      <div class="card-body p-0">
        <div class="row">
          <div class="col-5 p-0">
            <div class="avatar" data-details="{{ rower.avatar | dump }}"></div>
          </div>
          <div class="col-7 p-0 position-relative">
            {% if mode == 'login' %}
              <form method="post" action="/login">
                <input type="hidden" name="name" value="{{ rower.id }}">
                <button type="submit" class="btn btn-link fs-2 text-nowrap p-0 overflow-hidden" style="width:90%">{{ rower.name }} <i class="bi bi-arrow-right-circle fs-4"></i></button>
              </form>
            {% else %}
              <h2 class="pt-2 mb-0 pb-0">{{ rower.name }}</h2>
              <div class="fs-4 record-details"></div>
            {% endif %}
            <div class="position-absolute" style="bottom:5px;left:5px;right:20px">
              {% if mode == 'login' %}
                {% if rower.Records | length %}
                  <a href="#" data-rower="{{rower.id}}" style="display:block;margin:0 0 5px" class="btn btn-info info-rower" title="Rower Log"><i class="bi bi-book"></i> View Logs</a>
                {% endif %}
                <a href="/rower/{{rower.id}}" class="float-start btn btn-secondary edit-rower btn-sm" title="Edit"><i class="bi bi-pencil-square"></i> Edit</a>
                <a href="#" data-rower="{{rower.id}}" class="float-end btn btn-danger delete-rower btn-sm" title="Delete"><i class="bi bi-trash"></i> Delete</a>
              {% else %}
                {% if rower.Records | length %}
                  <form method="post" action="/compete">
                    <input type="hidden" name="competitor" value="{{ rower.id }}">
                    <input type="hidden" name="mode" value="" class="race-mode">
                    <button type="submit" class="btn btn-lg btn-primary" style="display:block;margin-bottom:5px;width:100%"><i class="bi bi-play-fill"></i> Start Race</button>
                    <a href="#" style="display:block" class="btn btn-secondary btn-sm info-rower" data-rower="{{ rower.id }}"><i class="bi bi-book"></i> View Logs</a>
                  </form>
                {% else %}
                  <em>Not Yet Rowed</em>
                {% endif %}
              {% endif %}
            </div>
          </div>
        </div>
      </div>
      <div class="card-footer">
        <small class="text-muted">{{ rower.note }}</small>
      </div>
    </div>
  </div>
{% endmacro %}